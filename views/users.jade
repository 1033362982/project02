extends layout
block content
    link(rel="stylesheet", href="style/bootstrap.min.css")
    // Button trigger modal
    button.insertdata.btn.btn-primary 添加数据
    // Modal
    table.table.table-bordered.table-hover
        thead
            th 用户名
            th 邮箱
            th 密码
            th 删除
        tbody
    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                    h4.modal-title 添加/修改数据
                .modal-body
                    form.myform(method="post")
                        .form-group
                            label 用户名
                            input.form-control(type='text',name="username")
                        .form-group
                            label 邮箱
                            input.email.form-control(type='text',name="email")
                        .form-group
                            label 密码
                            input.form-control(type='text',name="password")
                        button.btn.btn-primary(type='submit') 添加/修改
    script(src="script/jquery.js")
    script(src="script/bootstrap.min.js")
    script(src="script/users.js")